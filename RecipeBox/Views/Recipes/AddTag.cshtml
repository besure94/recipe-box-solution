@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe
@using RecipeBox.Models

<h2>Add a tag</h2>

<p><strong>Note: you must have at least one tag in order to add it to a recipe.</strong></p>
<p><strong>Go to @Html.ActionLink("this page", "Create", "Tags") to create a tag.</strong></p>

<h4>Add a tag to this recipe: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.RecipeId)
  @Html.Label("Select tag")
  @Html.DropDownList("TagId")
  <input type="submit" class="btn btn-primary" value="Add"/>
}

<p>@Html.ActionLink("Back to recipe list", "Index")</p>