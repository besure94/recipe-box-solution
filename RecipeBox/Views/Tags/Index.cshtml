@{
  Layout = "_Layout";
}

@using RecipeBox.Models;

<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No tags have been added yet.</h3>
}

<ul>
  @foreach (Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.Category}", "Details", new { id = tag.RecipeId })</li>
  }
</ul>

<p>@Html.ActionLink("Create new tag", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>